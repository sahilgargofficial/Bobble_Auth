<!DOCTYPE>
<html lang="en">
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/77e4fb1fa5.js" crossorigin="anonymous"></script>
    <title>Login</title>
</head>
<body>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous"
        src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v8.0&appId=608533379828856&autoLogAppEvents=1"
        nonce="pp6UyqVD"></script>
<header class="text-gray-700 body-font">
    <div class="container mx-auto pt-1 ">
        <a class="flex title-font font-medium items-center text-gray-900">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round"
                 stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full"
                 viewBox="0 0 24 24">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
            </svg>
            <span class="ml-3 text-xl">Nova Enterprises Ltd</span>
            <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
                <a class="mr-5 hover:text-gray-900" href="/">Register</a>
                <a class="mr-5 hover:text-gray-900" href="/logout">Logout</a>
            </nav>
        </a>
        <hr class="mt-2">
    </div>

</header>
<div id="logreg-forms">
    <form class="form-signin shadow shadow-xl border " method="post" action="https://reqres.in/api/users">
        <h1 class="h5 pb-2 mb-4" style="text-align: center"> login</h1>
        <h1 class="h3 pb-2 mb-0 font-weight-normal" style="text-align: center"> Login your Account</h1>
        <p class="lead text-center text-sm mx-auto mb-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
        <div class="mb-4 flex align-center justify-around">
            <div class="fb-login-button" data-size="medium" data-button-type="login_with" data-layout="default"
                 data-auto-logout-link="false" data-use-continue-as="false" data-width=""></div>
            <!--<div class="button border border-gray-100 py-2 px-2  flex bg-white font-semibold text-dark" data-size="medium" data-button-type="login_with" data-layout="default"
                 data-auto-logout-link="false" data-use-continue-as="false" data-width="">
                <i class="fab fa-facebook-f text-blue-700 font-semibold m-1"></i>
                <span class="text-sm font-semibold pl-1">Signup with facebook</span>
            </div>-->
            <button class="button border border-gray-100 py-2 px-2  flex bg-white font-semibold text-dark" type="button"
                    onclick="googleFunc();">
                     <span>
                    <i class="fab fa-google-plus-g text-red-700 font-semibold m-1"></i>
                    </span>
                <span class="text-sm font-semibold pl-1">Signup with google</span>

            </button>
        </div>
        <input type="email" id="inputEmail"
               class="focus:font-semibold border border-gray-100 focus:outline-none w-full px-2 py-2 mb-2"
               placeholder="Email address" name="email" required=""
               autofocus="">
        <div class="flex items-center border-gray-100 border  focus:outline-none my-0">
            <input type="password" id="inputPassword" class="focus:font-semibold  focus:outline-none pl-2 py-1 mb-2"
                   placeholder="Password" name="password"
                   required="">
            <i class="fas fa-eye ml-auto mr-2" id="eyeIcon" onclick="myFunction();"></i>
        </div>
        <p class="lead text-xs text-center py-1 font-semibold">By clicking you agree <span class="text-blue-400">Terms of use</span>
            and <span class="text-blue-400">Privacy policies</span></p>
        <button class="button focus:outline-none border font-semibold text-lg border-0 bg-blue-300 shadow shadow-lg w-full px-2 py-2 text-white"
                type="submit">Login
        </button>
    </form>
</div>

</body>
<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '608533379828856',
            cookie: true,
            xfbml: true,
            version: 'v5.0'
        });

        FB.AppEvents.logPageView();

    };

    (function (d, s, id) {
        let js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {
            return;
        }
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    function checkLoginState() {
        FB.getLoginStatus(function (response) {
            statusChangeCallback(response);
        });
    }

    function googleFunc() {
        window.location = '/google'
    }

    function myFunction() {
        const x = document.getElementById("inputPassword");
        const icon = document.getElementById("eyeIcon");
        if (x.type === "password") {
            x.type = "text";
            icon.className = "fas fa-eye-slash"
        } else {
            x.type = "password";
        }

    }
</script>
<style>

    /* sign in FORM */
    #logreg-forms {
        width: 412px;
        margin: 10vh auto;
        background-color: #ffffff;
        transition: all 0.3s cubic-bezier(.25, .8, .25, 1);
    }

    #logreg-forms form {
        width: 100%;
        max-width: 410px;
        padding: 15px;
        margin: auto;
    }


    #logreg-forms .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }

    #logreg-forms .form-signin input[type="password"] {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }


    #logreg-forms a {
        display: block;
        padding-top: 10px;
        color: lightseagreen;
    }

    #logreg-forms button[type="submit"] {
        margin-top: 10px;
    }

    #logreg-forms .form-signup input {
        margin-bottom: 2px;
    }

    /* Mobile */

    @media screen and (max-width: 500px) {
        #logreg-forms {
            width: 300px;
        }


        #logreg-forms .social-btn span {
            display: none;
        }

    }
</style>
</html>